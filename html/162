        var oldie = classes.split(' ')[1]
        if (loc === "dt3010" && oldie.search("ie9") === -1 ) { 
            var s = document.createElement('script');
            s.src = 'http://' + loc + ':35729/livereload.js';
            document.body.appendChild(s);
        }
        </script>
    </body>
</html>